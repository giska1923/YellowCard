<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fixtures</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="sidebar">
      <a href="/home" id="homeTab">Home</a>
      <a href="/fixtures" id="fixturesTab" class="active">Fixtures</a>
      <a href="/corners" id="cornersTab">Corners</a>
    </div>

    <div class="main-content">
      <div class="form-container">
        <h1>Fixtures</h1>
        League
        <select id="league"></select
        ><br /><br />
        Season
        <select id="season"></select
        ><br /><br />
        Team
        <select id="team"></select>
        <br /><br />

        <div class="form-row">
          <input type="radio" id="whole" name="duration" value="0" checked />
          <label for="whole">Whole match</label>
          <input type="radio" id="firstHalf" name="duration" value="1" />
          <label for="firstHalf">First half</label>
          <input type="radio" id="secondHalf" name="duration" value="2" />
          <label for="secondHalf">Second half</label>
        </div>

        <input
          type="text"
          id="exactNumGoals"
          placeholder="Average number of matches with scored goals"
        />

        <button id="calcFixturesBtn">Calculate</button>
        <div id="result" class="result inactive">
          <span id="calc"></span>
        </div>
      </div>
    </div>

    <script type="module" src="fixturesScript.js"></script>
  </body>
</html>
