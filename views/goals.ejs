<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Goals</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="sidebar">
      <a href="/home" id="homeTab">Home</a>
      <a href="/goals" id="goalsTab" class="active">Goals</a>
      <a href="/corners" id="cornersTab">Corners</a>
    </div>

    <div class="main-content">
      <div class="form-container">
        <h1>Goals</h1>
        <input type="text" id="league" placeholder="League Id" />
        <input type="text" id="season" placeholder="Season Id" />
        <input type="text" id="team" placeholder="Team Id" />

        <div class="form-row">
          <input type="radio" id="whole" name="duration" value="0" checked />
          <label for="whole">Whole match</label>
          <input type="radio" id="firstHalf" name="duration" value="1" />
          <label for="firstHalf">First half</label>
          <input type="radio" id="secondHalf" name="duration" value="2" />
          <label for="secondHalf">Second half</label>
        </div>

        <div class="form-row">
          <input
            type="radio"
            id="number"
            name="dataSet"
            value="false"
            checked
          />
          <label for="number">Number</label><br />
          <input type="radio" id="average" name="dataSet" value="true" />  
          <label for="average">Average</label><br />
        </div>

        <div class="form-row">
          <input
            type="checkbox"
            id="conceded"
            name="conceded"
            label="Goals conceded"
          />
          <label for="conceded">Goals conceded</label>
        </div>

        <hr />

        <div class="form-row">
          <input type="radio" id="winRate" name="ratio" value="1" />
          <label for="winRate">Win rate</label><br />
          <input type="radio" id="loseRate" name="ratio" value="2" />
          <label for="loseRate">Lose rate</label><br />
          <input type="radio" id="drawRate" name="ratio" value="3" />
          <label for="drawRate">Draw rate</label><br />
        </div>

        <hr />

        <div class="form-row">
          <input type="radio" id="numberCorners" name="corners" value="false" />
          <label for="numberCorners">Number of corners</label><br />
          <input type="radio" id="averageCorners" name="corners" value="true" />
            <label for="averageCorners">Average corners</label><br />
        </div>

        <hr />

        <div class="form-row">
          <input
            type="radio"
            id="numberYellowCards"
            name="yellowCards"
            value="false"
          />
          <label for="numberYellowCards">Number of yellow cards</label><br />
          <input
            type="radio"
            id="averageYellowCards"
            name="yellowCards"
            value="true"
          />
            <label for="averageYellowCards">Average yellow cards</label><br />
        </div>

        <hr />

        <div class="form-row">
          <input
            type="radio"
            id="numberRedCards"
            name="redCards"
            value="false"
          />
          <label for="numberRedCards">Number of red cards</label><br />
          <input
            type="radio"
            id="averageRedCards"
            name="redCards"
            value="true"
          />
            <label for="averageRedCards">Average red cards</label><br />
        </div>

        <hr />

        <input
          type="text"
          id="exactNumGoals"
          placeholder="Average number of matches with scored goals"
        />

        <button id="calcGoalsBtn">Calculate</button>
        <div id="result" class="result inactive">
          <span id="calc"></span>
        </div>
      </div>
    </div>

    <script type="module" src="goalsScript.js"></script>
  </body>
</html>
